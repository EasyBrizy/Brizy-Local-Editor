{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build:core": "lerna --scope @builder/core run build",
    "build:demo": "lerna --scope @builder/demo run build",
    "tsc": "npm run tsc:core && npm run tsc:demo",
    "tsc:core": "lerna --scope @builder/core run tsc --stream",
    "tsc:demo": "lerna --scope @builder/demo run tsc --stream"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "lerna": "^6.0.3"
  }
}
