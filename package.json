{
  "name": "root",
  "private": true,
  "scripts": {
    "postinstall": "lerna bootstrap",
    "build": "npm run build:core && npm run build:demo",
    "build:core": "lerna --scope @builder/core run build:prod",
    "build:demo": "lerna --scope @builder/demo run build:prod",
    "start:core": "lerna run start --scope=@builder/core",
    "start:demo": "lerna run start --scope=@builder/demo",
    "start:demoreact": "lerna run start --scope=demo-react",
    "start:demonextjs": "lerna run dev --scope=demo-nextjs",
    "start:thirdparty": "lerna run start --scope=thirdparty-widgets",
    "tsc": "npm run tsc:core && npm run tsc:demo",
    "tsc:core": "lerna --scope @builder/core run tsc --stream",
    "tsc:demo": "lerna --scope @builder/demo run tsc --stream",
    "start:docs": "lerna --scope @brizy/docs run start",
    "build:docs": "lerna --scope @brizy/docs run build"
  },
  "workspaces": [
    "packages/*",
    "docusaurus",
    "plugins/*"
  ],
  "devDependencies": {
    "lerna": "^6.0.3"
  },
  "dependencies": {
    "concurrently": "^8.2.2"
  }
}
