{
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build",
        "build:extensions"
      ],
      "env": [
        "MONGODB_URI",
        "MONGODB_DATABASE_NAME",
        "NEXT_PUBLIC_EDITOR_URL"
      ]
    },
    "start": {
      "dependsOn": [
        "build"
      ],
      "env": [
        "NEXT_PUBLIC_EDITOR_TOKEN",
        "NEXT_PUBLIC_EDITOR_URL",
        "NEXT_PUBLIC_EDITOR_ICON_URL"
      ]
    },
    "dev": {
      "dependsOn": [
        "^build",
        "build:extensions"
      ]
    },
    "build:extensions": {
      "dependsOn": ["^build"]
    }
  }
}
