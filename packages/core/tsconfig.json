{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@core": ["src/index.ts"],
      "@core/es/*": ["src/*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "outDir": "es",
    "declaration": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "lib", "es"]
}
