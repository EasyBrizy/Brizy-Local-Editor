{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "build/es",
    "paths": {
      "@/*": ["./*"]
    },
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitAny": true,
    "target": "es6",
    "lib": ["dom", "es2017"],
    "skipLibCheck": true,
    "declaration": true,
    "module": "ESNext"
  },
  "include": ["src"],
  "exclude": ["node_modules", "build"]
}
